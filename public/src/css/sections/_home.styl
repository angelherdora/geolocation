.geolocate-section
  .map
    position fixed !important
    overflow inherit !important
    top 0
    left 0
    right 0
    bottom 0
    width 100%
    height 100%
    z-index 1
    transition .8s
    &.expand
      width 60%
  .tools
    position absolute
    top 0
    left 0
    padding 20px
    box-sizing border-box
    max-width 300px
    z-index 2
    background rgba(black, 0.7);
    button
      display block
      width 100%
  .panel
    background black
    position fixed
    overflow auto
    right -40%
    top 0
    bottom 0
    padding 20px
    box-sizing border-box
    width 40%
    transition .8s
    .adp-directions
      color white !important
    &.show
      right 0
